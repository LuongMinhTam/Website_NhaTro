@*@model IEnumerable<WEBSITE_MOTEL.Models.CHUTRO>*@
@using WEBSITE_MOTEL.Models
@using PagedList.Mvc;
@model PagedList.PagedList<WEBSITE_MOTEL.Models.ChuTro>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD.cshtml";
}



@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
               
                <div class="table-responsive">
                    @using (Html.BeginForm("Index", "QLChutro", FormMethod.Get, new { @class = "navbar-form navbar-left", @role = "search" }))
                    {
                        <div class="form-group">
                            <input type="text" class="form-control" name="strSearch" value="@ViewData["strSearch"]" placeholder="Tìm kiếm">
                        </div>
                        <button type="submit" class="btn btn-default">Tìm</button>
                    }
                    <table class="table">
                        <tr>
                            <th style="text-align:center">
                                Họ tên
                            </th>
                            <th style="text-align:center">
                                Tài khoản
                            </th>
                            <th style="text-align:center">
                                Mật khẩu
                            </th>
                            <th style="text-align:center">
                                Email
                            </th>
                            <th style="text-align:center">
                                Facebook
                            </th>
                            <th style="text-align:center">
                                CCCD
                            </th>
                            <th style="text-align:center">
                                Địa chỉ
                            </th>
                            <th style="text-align:center">
                                Điện thoại
                            </th>
                            <th style="text-align:center">
                                Phân quyền
                            </th>
                            <th></th>
                        </tr>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sHotenCT)
                                </td>
                                @*<td>
                                        @Html.FormatValue(Model.sNgaySinh, "{0:dd/MM/yyyy}")
                                    </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.sTaiKhoanCT)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sMatKhauCT)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sEmailCT)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sFacebook)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sCCCD)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sDiaChi)
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => Model.Avatar)
                                    </td>*@
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.TrangThai)
                                    </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.sSDTCT)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sPhanQuyen)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.sId })" class="btn btn-warning" role="button">Sửa</a>
                                    <a href="@Url.Action("Details", new { id = item.sId })" class="btn btn-primary" role="button">Chi tiết</a>
                                    <a href="@Url.Action("Delete", new { id = item.sId })" class="btn btn-danger" role="button">Xóa</a>
                                </td>
                            </tr>
                        }

                    </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
                    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
                    <div class="MenuTrang">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
                    </div>

                    <style>
                        .MenuTrang {
                            display: inline;
                            text-align: center;
                        }
                    </style>
